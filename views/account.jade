extends layout

block content
  h1 Welcome

  .account-info.clearfix
    .container
      if user.local.email
        .unlink
          if user.twitter.token || user.google.token
            a(href='/unlink/local')
              span(class="icon icon-local-signup")
                span(class="path1")
                span(class="path2")
                span(class="path3")
              | Unlink Local
          else
            p.inactive
              span(class="icon icon-local-signup")
                span(class="path1")
                span(class="path2")
                span(class="path3")
              | Unlink Local
        p.heading userid 
        p #{user._id}
        p.heading email
        p #{user.local.email}
      else
        .connect
          a(href="/connect/local", title="connect local")
            span(class="icon icon-local-signup")
              span(class="path1")
              span(class="path2")
              span(class="path3")
            | Connect Local

    .container
      if user.twitter.token
        .unlink.unlink-twitter
          if user.local.email || user.google.token
            a(href="/unlink/twitter")
              span(class="icon icon-twitter")
              | Unlink Twitter
          else
            p.inactive
              span(class="icon icon-twitter")
              | Unlink Twitter
        p.heading id
        p #{user.twitter.id}
        p.heading display name
        p #{user.twitter.displayName}
        p.heading user name
        p #{user.twitter.username}
      else
        .connect.twitter-connect
          a(href="/connect/twitter")
            span(class="icon icon-twitter")
            | Connect Twitter

    .container
      if user.google.token
        .unlink.unlink-google
          if user.local.email || user.twitter.token
            a(href="/unlink/google")
              span(class="icon icon-google")
              | Unlink Google
          else
            p.inactive
              span(class="icon icon-google")
              | Unlink Google
        p.heading id
        p #{user.google.id}
        p.heading email name
        p #{user.google.email}
        p.heading name
        p #{user.google.name}
      else
        .connect.google-connect
          a(href="/connect/google")
            span(class="icon icon-google")
            | Connect Google
