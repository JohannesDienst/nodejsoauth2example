@import 'nib'

@import url("http//fonts.googleapis.com/css?family=Roboto");

.clearfix
  clearfix()

*
  box-sizing border-box

body
  font-family Roboto
  font-size 20px
  padding 0
  margin 0
 
a
  color #FFF;
  text-decoration none

.centered
  text-align center

h1
  margin 0
  padding 50px 0
  padding-bottom 100px
  color black
  width 100%
  text-align center
  text-transform uppercase

hr
  width 11%
  margin 50px auto
  border #f39c11

.loginpossibilitycontainer

  .loginpossibility
    width 20%
    float left
    margin 0 2.5%
    text-align center
    background grey
    padding 22px 0
    border-radius 5px

    &#local-login, &#local-signup
      background #2d3e50

      a
        color #f39c11
    
    &#twitter-login
      background #55acef
      
    &#google-login
      background #de4b39

form
  margin 0 auto
  width 200px
  padding 0 20px 20px 20px
  border 1px solid #a3b1b2
  border-radius 10px
  background #a3b1b2
  label
    display block
    width 100%
    margin-top 15px
  input
    margin-top 10px
    width 100%
  button[type=submit]
    margin-top 20px

input
  font-family Roboto
  border-radius 5px
  height 25px
  border none
 
-webkit-input-placeholder
  padding-left 10px
 
button[type=submit]
  font-family Roboto;
  border-radius 5px
  background #e98b39
  color #fbfcfc
  border none
  height 30px
  font-size 15px
  border-bottom 2px solid #D35400
  &:hover
    background #D35400

.account-info
  .container
    margin 30px 5% 0
    width 40%
    float left
    background #848484
    border-radius 10px
    padding 20px
    min-height: 280px;
    
    p
      word-wrap break-word
