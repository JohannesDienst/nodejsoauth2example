@import url("http://fonts.googleapis.com/css?family=Roboto");

body 
  font-family: Roboto
  font-size: 20px
  padding: 0
  margin: 0

input
  font-family: Roboto
  border-radius: 5px
  height: 25px
  border: none
 
::-webkit-input-placeholder
  padding-left: 10px
 
button[type=submit]
  font-family: Roboto;
  border-radius: 5px
  background: #e98b39
  color: #fbfcfc
  border: none
  height: 30px
  font-size: 15px
  border-bottom: 2px solid #D35400
  &:hover
    background: #D35400
 
a
  color: #00B7FF;
 
h1
  margin: 0
  padding: 18px
  background: #D35400
  color: black
  width: 100%

 	
form
  margin 18px
  width: 200px
  padding: 0 20px 20px 20px
  border: 1px solid #a3b1b2
  border-radius: 10px
  background: #a3b1b2
  label
    display: block
    width: 100%
    margin-top: 15px
  input
    margin-top: 10px
    width: 100%
  button[type=submit]
    margin-top: 20px
